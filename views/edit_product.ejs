<!DOCTYPE html>
<html lang="en">
<head>
    <title>Ganxa Home Page</title>
    <% include ./partial/head %>
    <script src="./js/map.js"></script>
    <link rel="stylesheet" href="./css/map.css"/>
    <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&libraries=places"></script>
</head>
<body>
<div id="page-wrapper">
    <!-- Preloader -->
    <div class="preloader themed-background">
        <h1 class="push-top-bottom text-light text-center"><strong>Pro</strong>UI</h1>

        <div class="inner">
            <h3 class="fa fa-spinner fa-spin fa-3x"><strong>Loading..</strong></h3>

            <div class="fa fa-spinner fa-spin fa-3x"></div>
        </div>
    </div>
    <!-- END Preloader -->

    <!-- Page Container -->
    <div id="page-container" class="sidebar-partial sidebar-visible-lg sidebar-no-animations">
        <!-- Alternative Sidebar -->
        <% include ./partial/slidebar %>
        <div id="main-container">
            <% include ./partial/header %>
            <!-- Page content -->
            <div id="page-content">
                <!-- Validation Header -->
                <div class="content-header">
                    <div class="header-section">
                        <h1>
                            <i class="gi gi-warning_sign"></i>Edit product<br>
                            <small>You can edit product!</small>
                        </h1>
                    </div>
                </div>
                <ul class="breadcrumb breadcrumb-top">
                    <li>Product</li>
                    <li><a href="">Edit product</a></li>
                </ul>
                <!-- END Validation Header -->
                <form id="form-validation" action="" method="post" enctype="multipart/form-data" class="form-horizontal form-bordered">
                    <% product_array.forEach(function (product) { %>
                    <div class="row">
                        <!--<div class="col-md-2"></div>-->
                        <div class="col-md-12">
                            <!-- Form Validation Example Block -->
                            <div class="block">
                                <!-- Form Validation Example Title -->
                                <div class="block-title">
                                    <h2><strong>Add</strong></h2>
                                </div>
                                <!-- END Form Validation Example Title -->

                                <!-- Form Validation Example Content -->


                                <fieldset>
                                    <div class="form-group">
                                        <label class="col-md-4 control-label" for="val_storename">Product name <span
                                                    class="text-danger">*</span></label>

                                        <div class="col-md-6">
                                            <div class="input-group">
                                                <input type="text" id="a" name="txtProductName"  value="<%=product.product_name%>" placeholder="Product name"
                                                       class="form-control">
                                                <span class="input-group-addon"><i class="gi gi-user_add"></i></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-4 control-label">Price <span
                                                    class="text-danger">*</span></label>

                                        <div class="col-md-6">
                                            <div class="input-group">
                                                <input type="text" id="o" name="txtPrice" placeholder="Price"
                                                       class="form-control  " value="<%=product.price%>" pattern="^[0-9]+([\,|\.]{0,1}[0-9]{2}){0,1}$">
                                                <span class="input-group-addon"><i class="gi gi-money"></i></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-4 control-label">Tags <span
                                                    class="text-danger">*</span></label>

                                        <div class="col-md-6">
                                            <div class="input-group">
                                                <input type="text" required name="txtTags" placeholder="Tags"
                                                       class="form-control" value="<%=product.tags%>">
                                                <span class="input-group-addon"><i class="gi gi-tags"></i></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-4 control-label">Description <span
                                                    class="text-danger">*</span></label>

                                        <div class="col-md-6">
                                            <div class="input-group">
                                                <textarea id="textarea-ckeditor" class="ckeditor" name="txtDescription" required=><%=product.description%></textarea>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-4 control-label">Product Image <span
                                                    class="text-danger">*</span></label>

                                        <div class="col-md-6">
                                            <div class="input-group">
                                                <input type="file"  name="ulfProductImage" placeholder=""
                                                       accept="image/*" alt="Product Image"
                                                       class="form-control  input_insertstore">
                                                 <span class="input-group-addon"><i class="fa fa-picture-o"></i></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group form-actions">
                                        <div class="col-md-12 col-md-offset-6">
                                            <input type="submit" class="btn btn-sm btn-primary" value="Add">
                                        </div>
                                    </div>


                                </fieldset>

                                <!-- END Form Validation Example Content -->


                            </div>

                            <!-- END Validation Block -->
                        </div>
                    </div>
                    <% }) %>
                </form>

                <!-- END Form Validation Example Content -->


            </div>
            <!-- END Page Content -->
            <% include ./partial/footer %>
        </div>
        <!-- Page content -->

    </div>

</div>
<!--END PAGE WRAPPER-->
<% include ./partial/settings %>
<script src="js/ckeditor/ckeditor.js"></script>

</body>
</html>