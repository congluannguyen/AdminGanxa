<!DOCTYPE html>
<html>
<head lang="en">
    <meta charset="UTF-8">
    <title>EJS</title>
</head>
<body>
<form method="post">
    <% location_array.forEach(function(location){ %>
    City: <input type="text" name="txtCity" value="<%= location.city %>">
    <br>
    <% location.district.forEach(function (district) { %>
    <a href="delete_district?district=<%= district %>"><i><%= district %></i></a>
    <br>
    <% }) %>
    Thêm quận, huyện: <input type="text" name="txtDistrict"> (ngăn cách bởi dấu ",")
    <br>
    <% }) %>
    <input type="submit" value="Thêm">
</form>
</body>
</html>