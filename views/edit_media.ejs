<!DOCTYPE html>
<html lang="en">
<head>
    <title>Ganxa Home Page</title>
    <% include ./partial/head %>
    <script src="./js/map.js"></script>
    <link rel="stylesheet" href="./css/map.css"/>
    <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&libraries=places"></script>
</head>
<body>
<div id="page-wrapper">
    <!-- Preloader -->
    <div class="preloader themed-background">
        <h1 class="push-top-bottom text-light text-center"><strong>Pro</strong>UI</h1>

        <div class="inner">
            <h3 class="fa fa-spinner fa-spin fa-3x"><strong>Loading..</strong></h3>

            <div class="fa fa-spinner fa-spin fa-3x"></div>
        </div>
    </div>
    <!-- END Preloader -->

    <!-- Page Container -->
    <div id="page-container" class="sidebar-partial sidebar-visible-lg sidebar-no-animations">
        <!-- Alternative Sidebar -->
        <% include ./partial/slidebar %>
        <div id="main-container">
            <% include ./partial/header %>
            <!-- Page content -->
            <div id="page-content">
                <!-- Validation Header -->
                <div class="content-header">
                    <div class="header-section">
                        <h1>
                            <i class="gi gi-warning_sign"></i>Edit media<br>
                            <small>You can edit media of product!</small>
                        </h1>
                    </div>
                </div>
                <ul class="breadcrumb breadcrumb-top">
                    <li>Media</li>
                    <li><a href="">Edit media</a></li>
                </ul>
                <!-- END Validation Header -->
                <% media_array.forEach(function(media){ %>
                <form id="form-validation" action="" method="post" enctype="multipart/form-data" class="form-horizontal form-bordered">
                    <div class="row">
                        <!--<div class="col-md-2"></div>-->
                        <div class="col-md-12">
                            <!-- Form Validation Example Block -->
                            <div class="block">
                                <!-- Form Validation Example Title -->
                                <div class="block-title">
                                    <h2><strong>Edit</strong></h2>
                                </div>
                                <!-- END Form Validation Example Title -->

                                <!-- Form Validation Example Content -->


                                <fieldset>
                                                                <div class="form-group">
                                        <label class="col-md-4 control-label" for="val_storename">Media name <span
                                                    class="text-danger">*</span></label>

                                        <div class="col-md-6">
                                            <div class="input-group">
                                                <input type="text" id="val_medianame" name="txtMediaName"
                                                       class="form-control" placeholder="Your media name.." value="<%=media.media_name%>">
                                                <span class="input-group-addon"><i class="gi gi-user_add"></i></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-4 control-label">Media type<span
                                                    class="text-danger">*</span></label>
                                        <div class="col-md-6">
                                            <label class="radio-inline" for="example-inline-radio1">
                                                <input type="radio" name="grpType" value="Image" <% if (media.media_type == "Image"){ %> checked <% } %>> Image
                                            </label>
                                            <label class="radio-inline" for="example-inline-radio2">
                                                <input type="radio" name="grpType" value="Video" <% if (media.media_type == "Video"){ %> checked <% } %> > Video
                                            </label>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-4 control-label" for="val_storename">Media Url </label>

                                        <div class="col-md-6">
                                            <div class="input-group">
                                                <input type="text" id="val_mediaurl" name="txtMediaUrl"
                                                       class="form-control" placeholder="Your media url.." value="<%=media.media_url%>">
                                                <span class="input-group-addon"><i class="fa fa-gears"></i></span>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-4 control-label">Choose Your file.. </label>

                                        <div class="col-md-6">
                                            <div class="input-group">
                                                <input type="file" name="ulfMediaUrl" placeholder="E"
                                                       accept="image/*" alt="Product Image"
                                                       class="form-control  input_insertstore">
                                                <span class="input-group-addon"><i class="fa fa-file"></i></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group form-actions">
                                        <div class="col-md-9 col-md-offset-3">
                                            <input type="submit" class="btn btn-sm btn-primary" value="Save">
                                        </div>
                                    </div>


                                </fieldset>

                                <!-- END Form Validation Example Content -->


                            </div>

                            <!-- END Validation Block -->
                        </div>
                        </div>
                    </form>
                <% }) %>

                                <!-- END Form Validation Example Content -->


            </div>
            <!-- END Page Content -->
            <% include ./partial/footer %>
        </div>
        <!-- Page content -->

    </div>

</div>
<!--END PAGE WRAPPER-->
<% include ./partial/settings %>

</body>
</html>